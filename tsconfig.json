{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "module": "esnext",
        "target": "es2018",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@cx-styled/react-*": ["packages/react/*/src/index.ts"],
            "react": ["apps/next-comp-gallery/node_modules/react"],
            "react-dom": ["apps/next-comp-gallery/node_modules/react-dom"],
        }
    },
    "include": ["packages","react"],
    "exclude": ["**/node_modules", "**/dist"]
}